@import '/global.wxss';

page {
  padding-bottom: 3em;
}
.block {
  margin-bottom: 3em;
}
.title {
  font-weight: 500;
  text-align: center;
  margin-top: 1em;
}
.title text:first-child {
  opacity: .6;
}
.title.completed text {
  opacity: .6;
}

.photos {
  margin-top: var(--gap);
  display: flex;
  flex-wrap: wrap;
  gap: var(--gap);
}

.photos image {
  width: calc((750rpx - 4 * var(--gap)) / 3);
  height: calc((750rpx - 4 * var(--gap)) / 3);
  border-radius: 2px;
}

.basic {
  border-top: 1px solid #f8f8f8;
  margin-top: 1em;
}
.basic label {
  display: flex;
  align-items: center;
  padding: .8em 0;
  border-bottom: 1px solid #f8f8f8;
}
.basic textarea {
  padding: .6em 0;
  line-height: 1.6;
  display: block;
  width: 100%;
}
.basic label input {
  flex: 1;
  text-align: right;
}

button.submit {
  margin-top: 3em;
}

.tip {
  line-height: 1.5;
  margin: var(--gap);
  font-size: x-small;
  opacity: .388;
}
.tip text {
  font-weight: 600;
}
