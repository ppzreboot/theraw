page, .root {
  --gap: 30rpx;
  --color-money: #ff5000;
  --gray-bg: #f8f8f8;
  --border-radius: .5em;
  --line-height: 1.7;

  line-height: 1;
}

page {
  padding-left: var(--gap);
  padding-right: var(--gap);
}
.fullwidth {
  margin-left: calc(50% - 50vw);
}
page, view, textarea {
  box-sizing: border-box;
}

input {
  line-height: 1;
  font-size: inherit;
  height: 1em;
}